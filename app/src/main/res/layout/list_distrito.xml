<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginEnd="12dp"
    android:layout_marginStart="12dp"
    android:layout_marginHorizontal="10dp"
    android:layout_marginVertical="8dp"
    app:cardCornerRadius="30dp"
    app:cardElevation="2dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

     <androidx.cardview.widget.CardView
         android:id="@+id/idCard"
         app:cardCornerRadius="30dp"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content">
         <com.google.android.material.imageview.ShapeableImageView
             android:id="@+id/imageClient"
             android:layout_width="60dp"
             android:layout_height="60dp"
             android:scaleType="centerCrop"
             android:src="@drawable/distrito"
             />
     </androidx.cardview.widget.CardView>


        <TextView
            android:id="@+id/nomeClient"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Distrito"
            android:textSize="18dp"
            android:fontFamily="@font/poppinsregular"
            android:layout_toEndOf="@id/idCard"
            android:layout_marginTop="10dp"
            android:layout_marginStart="10dp" />
        <TextView
            android:id="@+id/nomeProvincia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ProvÃ­ncia"
            android:layout_below="@+id/nomeClient"
            android:textSize="15dp"
            android:fontFamily="@font/poppinsregular"
            android:layout_toEndOf="@id/idCard"
            android:layout_marginStart="10dp" />



        <LinearLayout
            android:layout_marginEnd="16dp"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:gravity="center_horizontal"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:id="@+id/atualizarDistrito"
                android:src="@drawable/baseline_mode_edit_outline_24"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <ImageView
                android:id="@+id/apagarDistrito"
                android:layout_marginLeft="16dp"
                android:src="@drawable/baseline_delete_forever_24"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </LinearLayout>
    </RelativeLayout>





</androidx.cardview.widget.CardView>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ActivitySelectClient">


    <androidx.appcompat.widget.ActionMenuView
        android:id="@+id/menuBar"
        android:layout_width="match_parent"
        android:background="@drawable/img"
        android:backgroundTint="@color/teal_200"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_height="50dp">

    </androidx.appcompat.widget.ActionMenuView>

    <androidx.appcompat.widget.SearchView
        android:layout_marginTop="20dp"
        android:background="@drawable/button_sape"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:id="@+id/idSearch"
        android:layout_below="@id/menuBar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:iconifiedByDefault="false"
        app:queryHint=" Buscar cliente"
        android:focusable="false"

        />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/idRecyclerviewClients"
        android:layout_below="@id/idSearch"
        android:layout_marginTop="10dp"
        android:scrollbars="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:listitem="@layout/list_clientes">

    </androidx.recyclerview.widget.RecyclerView>

</RelativeLayout>
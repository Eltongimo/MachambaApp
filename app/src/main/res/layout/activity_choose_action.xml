<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/fundo"
    android:layout_height="match_parent"
    android:id="@+id/df"
    tools:context=".ActivityChooseAction">

    <TextView
        android:text=" Assistência Técnica"
        android:textColor="@color/white"
        android:fontFamily="@font/poppinssemibold"
        android:textSize="25dp"
        android:layout_marginTop="80dp"
        android:layout_centerHorizontal="true"
        android:id="@+id/idTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>


    <GridLayout
        android:layout_below="@id/idTitle"
        android:layout_marginBottom="29dp"
        android:layout_marginEnd="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="20dp"
           android:layout_width="match_parent"
           android:layout_height="300dp"
           android:rowCount="3"
           android:columnCount="2"
     >

           <androidx.cardview.widget.CardView
               android:id="@+id/idCardVisita"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               app:cardElevation="8dp"
               android:layout_row="0"
               android:layout_column="0"
               android:layout_gravity="fill"
               android:layout_margin="8dp"
               android:layout_rowWeight="1"
               android:layout_columnWeight="1"
               android:backgroundTint="@color/white"
               app:cardCornerRadius="8dp">

               <LinearLayout

                   android:orientation="vertical"
                   android:gravity="center"
                   android:layout_gravity="center_vertical|center_horizontal"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content">

                  <ImageView
                      android:id="@+id/imaga"
                      android:src="@drawable/baseline_compost_24"
                      android:layout_width="70dp"
                      android:layout_height="70dp"/>

                   <TextView
                       android:layout_marginStart="16dp"
                       android:layout_marginEnd="16dp"
                       android:textSize="18dp"
                       android:fontFamily="@font/poppinssemibold"
                       android:textColor="#8E8484"
                       android:text="Visita "
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"/>

               </LinearLayout>

           </androidx.cardview.widget.CardView>

           <androidx.cardview.widget.CardView
               android:id="@+id/idCardClientSelect"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               app:cardElevation="8dp"
               android:layout_row="0"
               android:layout_column="1"
               android:layout_gravity="fill"
               android:layout_margin="8dp"
               android:layout_rowWeight="1"
               android:layout_columnWeight="1"
               android:backgroundTint="@color/white"
               app:cardCornerRadius="8dp">

               <LinearLayout
                   android:orientation="vertical"
                   android:gravity="center"
                   android:layout_gravity="center_vertical|center_horizontal"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content">

                   <ImageView
                       android:src="@drawable/baseline_groups_24"
                       android:layout_width="70dp"
                       android:layout_height="70dp"/>

                   <TextView
                       android:layout_marginStart="16dp"
                       android:layout_marginEnd="16dp"
                       android:textSize="18dp"
                       android:fontFamily="@font/poppinssemibold"
                       android:textColor="#8E8484"
                       android:text="Clientes "
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"/>

               </LinearLayout>

           </androidx.cardview.widget.CardView>

           <androidx.cardview.widget.CardView
               android:id="@+id/idCardOpcao"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               app:cardElevation="8dp"
               android:layout_row="1"
               android:layout_column="0"
               android:layout_gravity="fill"
               android:layout_margin="8dp"
               android:layout_rowWeight="1"
               android:layout_columnWeight="1"
               android:backgroundTint="@color/white"
               app:cardCornerRadius="8dp">

               <LinearLayout
                   android:orientation="vertical"
                   android:gravity="center"
                   android:layout_gravity="center_vertical|center_horizontal"
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content">

                   <ImageView
                       android:src="@drawable/baseline_help_center_24"
                       android:layout_width="70dp"
                       android:layout_height="70dp"/>

                   <TextView
                       android:layout_marginStart="16dp"
                       android:layout_marginEnd="16dp"
                       android:textSize="18dp"
                       android:fontFamily="@font/poppinssemibold"
                       android:textColor="#8E8484"
                       android:text="Visão geral "
                       android:layout_width="wrap_content"
                       android:layout_height="wrap_content"/>

               </LinearLayout>

           </androidx.cardview.widget.CardView>

       </GridLayout>


</RelativeLayout>
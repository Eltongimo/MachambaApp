<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fundo"
    tools:context=".ui.admin.views.CreateFormResposta">

    <TextView
        android:id="@+id/salvarForm"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:textSize="18dp"
        android:clickable="true"
        android:textColor="@color/white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="250dp"
        android:text="Salvar FormulÃ¡rio"
        android:fontFamily="@font/poppinssemibold"
        />

    <androidx.cardview.widget.CardView
        android:id="@+id/idCardOpcao"
        android:layout_width="350dp"
        android:layout_height="500dp"
        app:cardElevation="8dp"
        android:layout_marginTop="150dp"
        android:layout_centerHorizontal="true"
        android:backgroundTint="@color/white"
        app:cardCornerRadius="8dp">

        <LinearLayout
            android:gravity="center"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_height="match_parent">
            <ImageView
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:src="@drawable/answer" />
            <TextView
                android:layout_marginTop="2dp"
                android:gravity="center"
                android:textSize="18dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Adicionar Resposta"
                android:fontFamily="@font/poppinssemibold"
                />

            <RadioGroup
                android:id="@+id/idRadioGroup"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="20dp"
                >

                <RadioButton
                    android:id="@+id/editTextRadio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Texto"
                    />

                <RadioButton
                    android:id="@+id/checkboxRadio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Checkbox" />

                <RadioButton
                    android:id="@+id/imagemRadio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Imagem" />

                <RadioButton
                    android:id="@+id/idRadio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Radio Group" />

            </RadioGroup>

            <Button
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_marginTop="22dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:width="300dp"
                app:cornerRadius="15sp"
                android:padding="12sp"
                android:textSize="16dp"
                android:fontFamily="@font/poppinsbold"
                android:backgroundTint="@color/cor_of_botton"
                android:text="Adicionar"
                android:id="@+id/addResposta"/>
        </LinearLayout>


    </androidx.cardview.widget.CardView>

</RelativeLayout>
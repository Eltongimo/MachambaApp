<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginEnd="12dp"
    android:layout_marginStart="12dp"
    android:layout_marginHorizontal="10dp"
    android:layout_marginVertical="8dp"
    app:cardCornerRadius="30dp"
    app:cardElevation="2dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

     <androidx.cardview.widget.CardView
         android:id="@+id/idCard"
         app:cardCornerRadius="30dp"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content">
         <com.google.android.material.imageview.ShapeableImageView
             android:id="@+id/imageClientView"
             android:layout_width="60dp"
             android:layout_height="60dp"
             android:scaleType="centerCrop"
             android:src="@drawable/img"
             />
     </androidx.cardview.widget.CardView>

        <TextView
            android:layout_marginEnd="30dp"
            android:layout_marginTop="6dp"
            android:id="@+id/nomeUserPl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="User"
            android:textSize="18dp"
            android:fontFamily="@font/poppinsregular"
            android:layout_toEndOf="@id/idCard"
            android:layout_marginStart="10dp"
            />


        <LinearLayout

            android:layout_marginStart="10dp"
            android:layout_toEndOf="@id/idCard"
            android:layout_below="@id/nomeUserPl"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:fontFamily="@font/poppinsmedium"
                android:id="@+id/idDistritoPl"
                android:text="Distrito"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>


        </LinearLayout>

        <LinearLayout
            android:layout_marginEnd="8dp"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true"
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <ImageView
                android:src="@drawable/baseline_mode_edit_outline_24"
                android:layout_centerVertical="true"
                android:id="@+id/editUserPl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <ImageView
                android:layout_marginStart="16dp"
                android:src="@drawable/baseline_delete_forever_24"
                android:id="@+id/deleteUserPl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>




    </RelativeLayout>





</androidx.cardview.widget.CardView>
<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/fundo"
    android:layout_height="match_parent"
    tools:context=".ui.home.HomeFragment">


    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:textSize="18dp"
            android:textStyle="bold"
            android:drawablePadding="12dp"
            android:paddingEnd="12dp"
            android:layout_marginEnd="16dp"
            android:layout_marginStart="16dp"
            android:gravity="end"
            android:drawableEnd="@drawable/baseline_persosr"
            android:layout_marginTop="12dp"
            android:text="Admin"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <GridLayout
            android:layout_marginTop="100dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:rowCount="5"
            android:layout_marginBottom="16dp"
            android:columnOrderPreserved="false"
            android:columnCount="2"
            android:layout_weight="8"
            android:padding="14dp"
            android:alignmentMode="alignMargins"
            >

            <androidx.cardview.widget.CardView
                android:foreground="?attr/selectableItemBackground"
                android:clickable="true"
                android:id="@+id/idCardUserPlR"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardElevation="8dp"
                android:layout_row="0"
                android:layout_column="0"
                android:layout_margin="8dp"
                android:layout_marginRight="16dp"
                android:layout_marginLeft="16dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:backgroundTint="@color/white"
                app:cardCornerRadius="8dp">

                <LinearLayout
                    android:padding="16dp"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:src="@drawable/baseline_person_add_alt_1_24"
                        android:layout_gravity="center_horizontal"
                        android:layout_width="46dp"
                        android:layout_height="46dp"/>

                    <TextView
                        android:layout_gravity="center_horizontal"
                        android:textAlignment="center"
                        android:textSize="18sp"
                        android:fontFamily="@font/poppinssemibold"
                        android:textColor="#8E8484"
                        android:text="Usuario"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:foreground="?attr/selectableItemBackground"
                android:clickable="true"
                android:id="@+id/idCardCultura"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="16dp"
                android:layout_marginLeft="16dp"
                app:cardElevation="8dp"
                android:layout_row="0"
                android:layout_column="1"
                android:layout_margin="8dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:backgroundTint="@color/white"
                app:cardCornerRadius="8dp">

                <LinearLayout
                    android:padding="16dp"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:src="@drawable/img_24"
                        android:layout_gravity="center_horizontal"
                        android:layout_width="46dp"
                        android:layout_height="46dp"/>
                    <TextView
                        android:gravity="center"
                        android:textSize="18dp"
                        android:fontFamily="@font/poppinssemibold"
                        android:textColor="#8E8484"
                        android:text="Cultura"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:foreground="?attr/selectableItemBackground"
                android:clickable="true"
                android:id="@+id/idCardOpctDistrito"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="16dp"
                android:layout_marginLeft="16dp"
                app:cardElevation="8dp"
                android:layout_row="1"
                android:layout_column="0"
                android:layout_margin="8dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:backgroundTint="@color/white"
                app:cardCornerRadius="8dp">

                <LinearLayout
                    android:padding="16dp"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:src="@drawable/img_15"
                        android:layout_gravity="center_horizontal"
                        android:layout_width="46dp"
                        android:layout_height="46dp"/>

                    <TextView
                        android:layout_gravity="center_horizontal"
                        android:textAlignment="center"
                        android:textSize="18sp"
                        android:fontFamily="@font/poppinssemibold"
                        android:textColor="#8E8484"
                        android:text= "Distrito"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                </LinearLayout>

            </androidx.cardview.widget.CardView>


            <androidx.cardview.widget.CardView
                android:foreground="?attr/selectableItemBackground"
                android:clickable="true"
                android:id="@+id/idCardEtnia"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardElevation="8dp"
                android:layout_row="1"
                android:layout_column="1"
                android:layout_marginRight="16dp"
                android:layout_marginLeft="16dp"
                android:layout_margin="8dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:backgroundTint="@color/white"
                app:cardCornerRadius="8dp">

                <LinearLayout
                    android:padding="16dp"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:src="@drawable/baseline_edit_location_alt_24"
                        android:layout_gravity="center_horizontal"
                        android:layout_width="46dp"
                        android:layout_height="46dp"/>

                    <TextView
                        android:layout_gravity="center_horizontal"
                        android:textAlignment="center"
                        android:textSize="18sp"
                        android:fontFamily="@font/poppinssemibold"
                        android:textColor="#8E8484"
                        android:text="Etnia"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                </LinearLayout>

            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:foreground="?attr/selectableItemBackground"
                android:clickable="true"
                android:id="@+id/idCardLocalidade"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                app:cardElevation="8dp"
                android:layout_marginRight="16dp"
                android:layout_marginLeft="16dp"
                android:layout_row="2"
                android:layout_column="0"
                android:layout_margin="8dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:backgroundTint="@color/white"
                app:cardCornerRadius="8dp">

                <LinearLayout
                    android:padding="16dp"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:src="@drawable/img_16"
                        android:layout_gravity="center_horizontal"
                        android:layout_width="46dp"
                        android:layout_height="46dp"/>

                    <TextView
                        android:layout_gravity="center_horizontal"
                        android:textAlignment="center"
                        android:textSize="18sp"
                        android:fontFamily="@font/poppinssemibold"
                        android:textColor="#8E8484"
                        android:text="Localidade"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:foreground="?attr/selectableItemBackground"
                android:clickable="true"
                android:id="@+id/idCardComunidade"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                app:cardElevation="8dp"
                android:layout_row="2"
                android:layout_column="1"
                android:layout_marginRight="16dp"
                android:layout_marginLeft="16dp"
                android:layout_margin="8dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:backgroundTint="@color/white"
                app:cardCornerRadius="8dp">

                <LinearLayout
                    android:padding="16dp"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:src="@drawable/img_18"
                        android:layout_gravity="center_horizontal"
                        android:layout_width="46dp"
                        android:layout_height="46dp"/>
                    <TextView
                        android:layout_gravity="center_horizontal"
                        android:textAlignment="center"
                        android:textSize="18sp"
                        android:fontFamily="@font/poppinssemibold"
                        android:textColor="#8E8484"
                        android:text="Comunidade"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                </LinearLayout>

            </androidx.cardview.widget.CardView>
            <androidx.cardview.widget.CardView
                android:foreground="?attr/selectableItemBackground"
                android:clickable="true"
                android:id="@+id/idCardPosto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:cardElevation="8dp"
                android:layout_row="3"
                android:layout_column="0"
                android:layout_marginRight="16dp"
                android:layout_marginLeft="16dp"
                android:layout_margin="8dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:backgroundTint="@color/white"
                app:cardCornerRadius="8dp">

                <LinearLayout
                    android:padding="16dp"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_gravity="center_vertical|center_horizontal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">


                    <ImageView
                        android:src="@drawable/img_14"
                        android:layout_gravity="center_horizontal"
                        android:layout_width="46dp"
                        android:layout_height="46dp"/>
                    <TextView
                        android:layout_gravity="center_horizontal"
                        android:textAlignment="center"
                        android:textSize="18sp"
                        android:fontFamily="@font/poppinssemibold"
                        android:textColor="#8E8484"
                        android:text="Posto "
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </GridLayout>


    </RelativeLayout>

</ScrollView>
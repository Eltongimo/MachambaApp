<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fundo"
    tools:context=".ui.produtorLider.ProdutorLiderFragment">


    <androidx.appcompat.widget.SearchView
        android:id="@+id/idSearch"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="16dp"
        android:backgroundTint="@color/white"
        android:focusable="false"
        app:iconifiedByDefault="false"
        app:queryHint=" Buscar UsuÃ¡rio"

        />

    <androidx.recyclerview.widget.RecyclerView

        android:id="@+id/idRecyclerviewUserPl"
        android:layout_below="@id/idSearch"
        android:layout_marginTop="10dp"
        android:scrollbars="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:listitem="@layout/list_edit_user_pl">

    </androidx.recyclerview.widget.RecyclerView>

    <Button
        android:layout_marginBottom="18dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:layout_marginTop="22dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:width="300dp"
        app:cornerRadius="15sp"
        android:padding="12sp"
        android:textSize="16dp"
        android:fontFamily="@font/poppinsbold"
        android:backgroundTint="#48b971"
        android:text="Registar usuario"
        android:id="@+id/registerUserLp"/>



</RelativeLayout>
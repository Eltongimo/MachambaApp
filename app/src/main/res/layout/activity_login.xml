<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity_Login">


    <ImageView
        android:id="@+id/imageTopR"
        android:layout_width="186dp"
        android:layout_height="154dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:src="@drawable/img_3" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="16dp"
        android:src="@drawable/icon_back"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome to Machamba"
        android:layout_marginTop="12dp"
        android:textColor="@color/black"
        android:textSize="18dp"
        android:id="@+id/titleR"
        android:layout_below="@id/imageTopR"
        android:layout_centerHorizontal="true"/>

    <TextView
        android:id="@+id/subTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/titleR"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="Enter your username end password to login"
        android:textSize="12sp" />

      <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_below="@id/subTitle"
        android:layout_marginTop="10dp"
        android:padding="30dp"
        android:id="@+id/linearlayout_1"
        >

        <EditText
            android:drawableLeft="@drawable/baseline_person_24"
            android:layout_width="match_parent"
            android:layout_height="58dp"
            android:hint="  Enter your username"
            android:paddingLeft="10dp"
            android:textSize="16dp"
            android:background="@drawable/button_sape"
            android:id="@+id/idFullName"
            />

        <EditText
            android:drawableLeft="@drawable/baseline_phone_26"
            android:layout_width="match_parent"
            android:layout_height="58dp"
            android:hint="  Enter your password"
            android:textSize="16dp"
            android:inputType="textPassword"
            android:paddingLeft="10dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/button_sape"
            />

    </LinearLayout>


    <Button
        android:padding="16dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/linearlayout_1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:id="@+id/idButtonlogar"
        android:width="300dp"
        android:backgroundTint="@color/teal_200"
        android:textStyle="bold"
        app:cornerRadius="15sp"
        android:text="Logar"/>


    <LinearLayout
        android:layout_marginTop="4dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/idButtonlogar"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal">

        <TextView
            android:layout_marginTop="4dp"
            android:textSize="12sp"
            android:layout_below="@id/idButtonlogar"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Para recuperar senha "

            />

        <TextView
            android:textSize="12sp"
            android:layout_marginTop="4dp"
            android:textColor="@color/teal_200"
            android:layout_below="@id/idButtonlogar"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" Clik aqui "

            />
    </LinearLayout>





</RelativeLayout>
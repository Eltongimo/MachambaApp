<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fundo2"
    tools:context=".ActivityLogin">


   <RelativeLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent">
       <ImageView
           android:layout_centerHorizontal="true"
           android:layout_marginTop="25dp"
           android:id="@+id/imageTopR"
           android:layout_width="130dp"
           android:layout_height="130dp"
           android:layout_alignParentTop="true"
           android:src="@drawable/img_5" />

       <TextView
           android:textSize="18dp"
           android:textColor="@color/white"
           android:layout_centerHorizontal="true"
           android:layout_below="@id/imageTopR"
           android:id="@+id/idTitle"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="Bem-vindo a Assistência Técnica"
           android:layout_marginTop="12dp"
           android:fontFamily="@font/poppinssemibold"/>

       <TextView

           android:id="@+id/subTitle"
           android:fontFamily="@font/poppinsregular"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_below="@id/idTitle"
           android:layout_centerHorizontal="true"
           android:layout_marginTop="10dp"
           android:text="Insira as credenciais para puder entar"
           android:textSize="15sp" />

       <LinearLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:orientation="vertical"
           android:layout_below="@id/subTitle"
           android:layout_marginTop="53dp"
           android:padding="30dp"
           android:id="@+id/linearlayout_1"
           >

           <EditText
               android:drawableLeft="@drawable/baseline_phone_26"
               android:layout_width="match_parent"
               android:layout_height="58dp"
               android:inputType="phone"
               android:hint=" O número do telemóvel"
               android:paddingLeft="10dp"
               android:textSize="16dp"
               android:drawablePadding="10dp"
               android:fontFamily="@font/poppinsregular"
               android:background="@drawable/button_sape"
               android:id="@+id/idEditUserName"
               />

           <EditText
               android:id="@+id/idEditPassword"
               android:drawableLeft="@drawable/baseline_key"
               android:layout_width="match_parent"
               android:layout_height="58dp"
               android:hint="  A senha do usuario"
               android:textSize="16dp"
               android:inputType="textPassword"
               android:drawablePadding="10dp"
               android:fontFamily="@font/poppinsregular"
               android:paddingLeft="10dp"
               android:layout_marginTop="20dp"
               android:background="@drawable/button_sape"
               />


           <TextView
               android:id="@+id/idAlert"
               android:textSize="12dp"
               android:textColor="#F44336"
               android:textStyle="bold"
               android:layout_marginStart="16dp"
               android:layout_marginEnd="16dp"
               android:layout_marginTop="10dp"
               android:text=""
               android:layout_width="match_parent"
               android:layout_height="wrap_content"/>

       </LinearLayout>


       <Button
           android:padding="12dp"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_below="@id/linearlayout_1"
           android:layout_centerHorizontal="true"
           android:layout_marginTop="30dp"
           android:id="@+id/idButtonlogar"
           android:width="300dp"
           android:fontFamily="@font/poppinsbold"
           android:textSize="16sp"
           android:textStyle="bold"
           android:backgroundTint="@color/cor_of_botton"
           app:cornerRadius="15sp"
           android:text="Entrar"/>


       <LinearLayout
           android:layout_marginTop="4dp"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_below="@id/idButtonlogar"
           android:layout_centerHorizontal="true"
           android:orientation="horizontal">

           <TextView
               android:layout_marginTop="4dp"
               android:textSize="12sp"
               android:layout_below="@id/idButtonlogar"
               android:layout_centerHorizontal="true"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="Para recuperar senha "

               />

           <TextView
               android:textSize="12sp"
               android:layout_marginTop="4dp"
               android:textColor="@color/cor_of_botton"
               android:layout_below="@id/idButtonlogar"
               android:layout_centerHorizontal="true"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text=" clique aqui " />
       </LinearLayout>

   </RelativeLayout>
</ScrollView>